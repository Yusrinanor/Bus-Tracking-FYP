<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.fyp.AdminHome"
    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/navigation_actionbar" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:backgroundTint="#FF9800"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="match_parent"
                        android:id="@+id/homeimage"
                        android:src="@drawable/schedule"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardtitle"
                        android:layout_toRightOf="@id/homeimage"
                        android:fontFamily="@font/asap_medium"
                        android:text="Manage bus schedule"
                        android:textColor="#FFF"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardtitle"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/homeimage"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="Manage bus schedule by adding and deleting bus timing"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:backgroundTint="#0D47A1"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="match_parent"
                        android:id="@+id/homeimage1"
                        android:src="@drawable/bluebus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardtitle1"
                        android:layout_toRightOf="@id/homeimage1"
                        android:fontFamily="@font/asap_medium"
                        android:text="View Bus Arrivals"
                        android:textColor="#FFF"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardtitle1"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/homeimage1"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="Track bus arrivals to ensure they arrive on time"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:backgroundTint="#E91E63"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="match_parent"
                        android:id="@+id/homeimage2"
                        android:src="@drawable/feedbackcolyea"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardtitle2"
                        android:layout_toRightOf="@id/homeimage2"
                        android:fontFamily="@font/asap_medium"
                        android:text="View feedback"
                        android:textColor="#FFF"
                        android:textSize="30dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardtitle2"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/homeimage2"
                        android:fontFamily="@font/asap_medium"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:text="View submitted feedback to assess the bus service"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/menuNavigationView"

        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu2"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_menu"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>